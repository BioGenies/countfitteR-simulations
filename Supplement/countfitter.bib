	keywords = {Animals; Antineoplastic Agents; Cell Line; Tumor; CHO Cells; Cisplatin; Comet Assay; Cricetinae; Cricetulus; DNA; Drug Resistance; Neoplasm; Histones; Humans; Immunohistochemistry; Phosphorylation},
	language = {eng},
